<p><%= notice %></p>
<% @blogs.each do |blog| %>
  <div>
    <%= blog.user.name if blog.user %>
    <%= blog.title %>
    <br><%= blog.content %></br>
    
    <%= image_tag blog.image.url %>
    

    <%= link_to '詳細', blog_path(blog.id) %>
    <%= link_to "編集する", edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？'} %>
    <%= link_to '削除する', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
  </div>
<% end %>
<%= link_to '新しく投稿する', new_blog_path %>